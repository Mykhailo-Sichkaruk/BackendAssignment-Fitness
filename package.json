{
  "name": "fitnessapp",
  "version": "1.0.0",
  "description": "Testing assigments for Backend developer interview",
  "main": "src/index.ts",
  "type": "module",
  "target": "es2022",
  "module": "es2022",
  "scripts": {
    "compile": "tsc",
    "start": "npm run db-dev && node src/index.js",
    "generate-api-test": "npx openapi --input ./src/presentation/openapi.json --output ./test/api/ --client fetch",
    "db-generate": "npx prisma generate --schema=./src/infrastructure/prisma/schema.prisma",
    "db-format": "npx prisma format --schema=./src/infrastructure/prisma/schema.prisma",
    "db-dev": "npx prisma db push --skip-generate --schema=./src/infrastructure/prisma/schema.prisma",
    "db-dev-migrate": "npx prisma migrate dev --skip-generate --schema=./src/infrastructure/prisma/schema.prisma",
    "db-migrate": "npx prisma migrate deploy --schema=./src/infrastructure/prisma/schema.prisma",
    "test": "npm run generate-api-test && npx ts-mocha ./test/index.ts "
  },
  "author": "mykhailo.sichkaruk@gmail.com",
  "license": "ISC",
  "imports": {
    "#*": "./src/*"
  },
  "dependencies": {
    "@prisma/client": "^5.2.0",
    "express": "^4.18.2",
    "express-openapi-validator": "^5.0.6",
    "express-validator": "^7.0.1",
    "http-status-codes": "^2.2.0",
    "jsonwebtoken": "^9.0.2",
    "mocha": "^10.2.0",
    "prettier": "^3.0.3",
    "prisma": "^5.2.0",
    "swagger-ui-express": "^5.0.0",
    "ts-dotenv": "^0.9.1",
    "ts-opaque": "^3.0.1",
    "ts-results-es": "^4.0.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.2",
    "@types/chai": "^4.3.6",
    "@types/expect": "^24.3.0",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.6.0",
    "@types/sinon": "^10.0.16",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/validator": "^13.1.0",
    "@typescript-eslint/eslint-plugin": "^6.6.0",
    "@typescript-eslint/parser": "^6.6.0",
    "chai": "^4.3.8",
    "eslint": "^8.49.0",
    "eslint-config-metarhia": "^8.2.1",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-security": "^1.7.1",
    "openapi-typescript-codegen": "^0.25.0",
    "ts-mocha": "^10.0.0",
    "typescript": "^5.2.2"
  }
}
